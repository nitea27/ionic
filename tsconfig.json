{
  "compilerOptions": {
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "plugins"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "types": [
    "jasmine"
  ]
}
